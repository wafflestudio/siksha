<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white" >

    <TextView
        android:id="@+id/downloading_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textStyle="bold"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:text="@string/downloading_error" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_primary_lunch" />

    <TextView
        android:id="@+id/downloading_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/downloading_network_state" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_primary_lunch" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/downloading_dialog_positive_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_pressed"
            android:text="@string/downloading_retry" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray" />

        <Button
            android:id="@+id/downloading_dialog_negative_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_pressed"
            android:text="@string/downloading_cancel" />

    </LinearLayout>

</LinearLayout>